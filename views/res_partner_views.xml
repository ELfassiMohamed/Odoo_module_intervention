<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire Ã©tendue pour les clients -->
        <record id="res_partner_intervention_form_view" model="ir.ui.view">
            <field name="name">res.partner.intervention.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="Interventions" attrs="{'invisible': [('intervention_count', '=', 0)]}">
                        <group>
                            <group string="Informations Techniques">
                                <field name="equipment_type"/>
                                <field name="access_instructions"/>
                            </group>
                            <group string="Statistiques">
                                <field name="intervention_count" readonly="1"/>
                                <field name="last_intervention_date" readonly="1"/>
                                <field name="total_intervention_cost" readonly="1"/>
                            </group>
                        </group>
                        
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_interventions" 
                                    type="object" 
                                    class="oe_stat_button" 
                                    icon="fa-wrench"
                                    attrs="{'invisible': [('intervention_count', '=', 0)]}">
                                <field name="intervention_count" widget="statinfo" string="Interventions"/>
                            </button>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Smart button dans la vue principale -->
        <record id="res_partner_intervention_button" model="ir.ui.view">
            <field name="name">res.partner.intervention.button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button name="action_view_interventions" 
                            type="object" 
                            class="oe_stat_button" 
                            icon="fa-wrench"
                            attrs="{'invisible': [('intervention_count', '=', 0)]}">
                        <field name="intervention_count" widget="statinfo" string="Interventions"/>
                    </button>
                </xpath>
            </field>
        </record>

    </data>
</odoo>