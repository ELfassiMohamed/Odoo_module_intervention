<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue formulaire étendue pour les techniciens -->
        <record id="res_users_technician_form_view" model="ir.ui.view">
            <field name="name">res.users.technician.form</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Intervention" attrs="{'invisible': [('is_intervention_technician', '=', False)]}">
                        <group>
                            <group string="Informations Technicien">
                                <field name="is_intervention_technician"/>
                                <field name="technician_available" attrs="{'invisible': [('is_intervention_technician', '=', False)]}"/>
                                <field name="current_location" attrs="{'invisible': [('is_intervention_technician', '=', False)]}"/>
                            </group>
                            <group string="Spécialités" attrs="{'invisible': [('is_intervention_technician', '=', False)]}">
                                <field name="specialty_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                            </group>
                        </group>
                        
                        <group string="Statistiques" attrs="{'invisible': [('is_intervention_technician', '=', False)]}">
                            <group>
                                <field name="intervention_count" readonly="1"/>
                                <field name="current_interventions" readonly="1"/>
                            </group>
                            <group>
                                <button name="action_view_interventions" 
                                        string="Voir mes interventions" 
                                        type="object" 
                                        class="btn-primary"
                                        attrs="{'invisible': [('intervention_count', '=', 0)]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <!-- Vue liste des techniciens -->
        <record id="res_users_technician_tree_view" model="ir.ui.view">
            <field name="name">res.users.technician.tree</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <tree string="Techniciens">
                    <field name="name"/>
                    <field name="login"/>
                    <field name="technician_available"/>
                    <field name="current_location"/>
                    <field name="specialty_ids" widget="many2many_tags"/>
                    <field name="intervention_count"/>
                    <field name="current_interventions"/>
                </tree>
            </field>
        </record>

        <!-- Action pour les techniciens -->
        <record id="action_intervention_technicians" model="ir.actions.act_window">
            <field name="name">Techniciens</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_intervention_technician', '=', True)]</field>
            <field name="context">{'default_is_intervention_technician': True}</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('res_users_technician_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('res_users_technician_form_view')})]"/>
        </record>

        <!-- Vue formulaire pour les spécialités -->
        <record id="intervention_specialty_form_view" model="ir.ui.view">
            <field name="name">intervention.specialty.form</field>
            <field name="model">intervention.specialty</field>
            <field name="arch" type="xml">
                <form string="Spécialité">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vue liste pour les spécialités -->
        <record id="intervention_specialty_tree_view" model="ir.ui.view">
            <field name="name">intervention.specialty.tree</field>
            <field name="model">intervention.specialty</field>
            <field name="arch" type="xml">
                <tree string="Spécialités">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <!-- Action pour les spécialités -->
        <record id="action_intervention_specialties" model="ir.actions.act_window">
            <field name="name">Spécialités d'intervention</field>
            <field name="res_model">intervention.specialty</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>