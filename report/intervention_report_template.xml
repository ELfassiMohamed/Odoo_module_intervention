<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_intervention_document">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="oe_structure"/>
                        
                        <div class="row">
                            <div class="col-6">
                                <h2>Rapport d'Intervention</h2>
                            </div>
                            <div class="col-6 text-right">
                                <strong>N° <span t-field="o.id"/></strong>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Client :</strong><br/>
                                <span t-field="o.partner_id.name"/><br/>
                                <span t-field="o.partner_id.street"/><br/>
                                <span t-field="o.partner_id.zip"/> <span t-field="o.partner_id.city"/>
                            </div>
                            <div class="col-6">
                                <strong>Technicien :</strong><br/>
                                <span t-field="o.technician_id.name"/><br/>
                                <strong>Date :</strong> <span t-field="o.start_date" t-options="{'widget': 'datetime'}"/><br/>
                                <strong>Durée :</strong> <span t-field="o.actual_duration" t-options="{'widget': 'float_time'}"/>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <h4>Intervention : <span t-field="o.title"/></h4>
                                <p><strong>Catégorie :</strong> <span t-field="o.category_id.name"/></p>
                                <p><strong>Priorité :</strong> <span t-field="o.priority"/></p>
                            </div>
                        </div>
                        
                        <div class="row mt-3">
                            <div class="col-12">
                                <h5>Description :</h5>
                                <div t-field="o.description"/>
                            </div>
                        </div>
                        
                        <div class="row mt-3" t-if="o.technician_notes">
                            <div class="col-12">
                                <h5>Notes du technicien :</h5>
                                <div t-field="o.technician_notes"/>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-8">
                                <h5>Récapitulatif financier :</h5>
                                <table class="table table-sm">
                                    <tr>
                                        <td>Main d'œuvre :</td>
                                        <td class="text-right">
                                            <span t-field="o.labor_cost" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Matériel :</td>
                                        <td class="text-right">
                                            <span t-field="o.material_cost" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                        </td>
                                    </tr>
                                    <tr class="table-active">
                                        <td><strong>Total :</strong></td>
                                        <td class="text-right">
                                            <strong><span t-field="o.total_cost" t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/></strong>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-4" t-if="o.client_signature">
                                <h5>Signature client :</h5>
                                <img t-att-src="image_data_uri(o.client_signature)" style="max-width: 200px; max-height: 100px;"/>
                                <br/>
                                <small>Signé le <span t-field="o.signature_date" t-options="{'widget': 'datetime'}"/></small>
                            </div>
                        </div>
                        
                        <div class="row mt-5">
                            <div class="col-6">
                                <p>Signature du technicien :</p>
                                <br/><br/>
                                <div style="border-top: 1px solid #000; width: 200px;"></div>
                                <small><span t-field="o.technician_id.name"/></small>
                            </div>
                            <div class="col-6" t-if="not o.client_signature">
                                <p>Signature du client :</p>
                                <br/><br/>
                                <div style="border-top: 1px solid #000; width: 200px;"></div>
                                <small>Date : _______________</small>
                            </div>
                        </div>
                        
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>