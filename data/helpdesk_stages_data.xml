<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Étapes spécifiques aux interventions -->
        <record id="stage_nouveau" model="helpdesk.stage">
            <field name="name">Nouveau</field>
            <field name="sequence">10</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">assign</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

        <record id="stage_assigne" model="helpdesk.stage">
            <field name="name">Assigné</field>
            <field name="sequence">20</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">notify</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

        <record id="stage_in_progress" model="helpdesk.stage">
            <field name="name">En cours</field>
            <field name="sequence">30</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">none</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

        <record id="stage_completed" model="helpdesk.stage">
            <field name="name">Terminé</field>
            <field name="sequence">40</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">none</field>
            <field name="require_signature">True</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

        <record id="stage_invoiced" model="helpdesk.stage">
            <field name="name">Facturé</field>
            <field name="sequence">50</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">none</field>
            <field name="fold">True</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

        <record id="stage_cancelled" model="helpdesk.stage">
            <field name="name">Annulé</field>
            <field name="sequence">60</field>
            <field name="is_intervention_stage">True</field>
            <field name="auto_actions">none</field>
            <field name="fold">True</field>
            <field name="team_ids" eval="[(4, ref('team_intervention_technique'))]"/>
        </record>

    </data>
</odoo>