<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Équipe d'intervention technique -->
        <record id="team_intervention_technique" model="helpdesk.team">
            <field name="name">Interventions Techniques</field>
            <field name="description">Équipe dédiée aux interventions sur site (climatisation, maintenance, réparations)</field>
            <field name="is_intervention_team">True</field>
            <field name="auto_assign_technician">True</field>
            <field name="default_intervention_duration">2.0</field>
            <field name="color">3</field>
            <field name="use_sla">True</field>
        </record>

        <!-- Spécialités d'intervention -->
        <record id="specialty_climatisation" model="intervention.specialty">
            <field name="name">Climatisation</field>
            <field name="description">Installation, maintenance et réparation de systèmes de climatisation</field>
            <field name="color">1</field>
        </record>
        
        <record id="specialty_chauffage" model="intervention.specialty">
            <field name="name">Chauffage</field>
            <field name="description">Systèmes de chauffage et chaudières</field>
            <field name="color">5</field>
        </record>
        
        <record id="specialty_plomberie" model="intervention.specialty">
            <field name="name">Plomberie</field>
            <field name="description">Réparations et installations plomberie</field>
            <field name="color">4</field>
        </record>
        
        <record id="specialty_electricite" model="intervention.specialty">
            <field name="name">Électricité</field>
            <field name="description">Installation et réparation électrique</field>
            <field name="color">2</field>
        </record>

        <!-- Produit service par défaut -->
        <record id="product_intervention_service" model="product.product">
            <field name="name">Service d'intervention technique</field>
            <field name="type">service</field>
            <field name="list_price">75.0</field>
            <field name="standard_price">50.0</field>
            <field name="uom_id" ref="uom.product_uom_hour"/>
            <field name="uom_po_id" ref="uom.product_uom_hour"/>
            <field name="invoice_policy">delivery</field>
            <field name="purchase_ok">False</field>
            <field name="sale_ok">True</field>
        </record>

    </data>
</odoo>